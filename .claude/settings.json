{
  "extraKnownMarketplaces": {
    "agiletec": {
      "source": {
        "source": "github",
        "repo": "agiletec-inc/airis-agent"
      }
    }
  },
  "enabledPlugins": [
    "airis-agent@agiletec"
  ],
  "hooks": {
    "SessionStart": [
      {
        "matchers": [
          {
            "source": "startup"
          }
        ],
        "hooks": [
          {
            "type": "prompt",
            "prompt": "/airis:agent"
          }
        ]
      }
    ]
  }
}
